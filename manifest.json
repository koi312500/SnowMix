{
  "manifest_version": 3,
  "name": "Snowmix",
  "version": "0.2.1",
  "description": "For everyone who walks towards the stars",
  "permissions": [
    "activeTab", "scripting", "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
